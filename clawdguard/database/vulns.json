      "name": "Gateway Exposure - No Auth",
      "severity": "critical",
      "description": "Default localhost trust bypassed if bind != loopback",
      "pattern": "\"bind\"\\s*:\\s*\"0\\.0\\.0\\.0\"",
      "config_check": {
        "must_have": "\"bind\": \"loopback\"",
        "must_not_have": "\"bind\": \"0.0.0.0\""
      }
